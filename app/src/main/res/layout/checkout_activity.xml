<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/foodTitle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#1AA3BC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderfoodTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="24dp"
        android:text="Checkout"
        android:textColor="#FFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onfoodTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="175dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:text="3 Items"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderfoodTitle" />

    <LinearLayout
        android:id="@+id/foodyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/onfoodTitle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="150dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/pic1" />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/itemTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khoai Tây Chiên"
                            android:textColor="#0F5860"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/itemSubTitleOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá: 20.000"
                            android:textColor="#0F5860"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnRemoveOne"
                        android:layout_marginTop="20dp"
                        android:textSize="11sp"
                        android:text="REMOVE"
                        android:layout_width="92dp"
                        android:layout_height="35dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="150dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:src="@drawable/pic2" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemTitleTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mỳ Ý"
                    android:textColor="#0F5860"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/itemSubTitleTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 60.000"
                    android:textColor="#0F5860"
                    android:textSize="16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/btnRemoveThree"
                android:layout_marginTop="20dp"
                android:textSize="11sp"
                android:text="REMOVE"
                android:layout_width="92dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="150dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:src="@drawable/pic3" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemTitleThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gà Rán"
                    android:textColor="#0F5860"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/itemSubTitleThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 40.000"
                    android:textColor="#0F5860"
                    android:textSize="16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/btnRemovwThree"
                android:layout_marginTop="20dp"
                android:textSize="11sp"
                android:text="REMOVE"
                android:layout_width="92dp"
                android:layout_height="35dp" />
        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>