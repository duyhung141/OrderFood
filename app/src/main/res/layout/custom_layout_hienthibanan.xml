<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size5dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/imvBanAn"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/banan"
        android:layout_below="@id/txtTenBanAn"/>
    <ImageView
        android:id="@+id/imvGoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goimon"
        android:layout_below="@id/imvBanAn"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/imvThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thanhtoan"
        android:layout_below="@id/imvBanAn"
        android:layout_toRightOf="@id/imvGoiMon"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/imvAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imvBanAn"
        android:layout_toRightOf="@id/imvThanhToan"
        android:src="@drawable/anbutton"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"/>


</RelativeLayout>